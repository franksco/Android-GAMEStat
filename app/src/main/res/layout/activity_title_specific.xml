<?xml version="1.0" encoding="utf-8"?>



        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.TitleSpecificActivity">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/imageView"
                android:scaleType="centerCrop" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/imageView"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:id="@+id/wrapper"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/gameTextView"
                        android:paddingTop="20dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/deckTextView"
                        android:layout_below="@id/gameTextView"
                        android:paddingTop="20dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/genreTextView"
                        android:layout_below="@id/deckTextView"
                        android:paddingTop="20dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/releaseDateTextView"
                        android:layout_below="@id/genreTextView"
                        android:paddingTop="20dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:id="@+id/developersTextView"
                        android:layout_below="@id/releaseDateTextView"
                        android:paddingTop="20dp" />
                </RelativeLayout>
                </LinearLayout>
                </ScrollView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Game"
                android:id="@+id/saveGameButton"
                android:background="@color/colorAccent"
                android:textColor="@color/colorPrimaryText"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>





